<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

	<Button
	    android:id="@+id/btnGetToken"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:onClick="onGetToken"
	    android:text="@string/btn_id_hint" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/text_target" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

	    <EditText
	        android:id="@+id/textTarget"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:hint="@string/text_target_hint"
	        android:inputType="text"
	        android:maxLines="1"
	        android:selectAllOnFocus="true" />

	    <ImageButton
	        android:id="@+id/btnEdit"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:contentDescription="@android:string/paste"
			android:src="@android:drawable/ic_input_add" 
			android:onClick="onEditTarget" />
	</LinearLayout>

	<Button
	    android:id="@+id/btnGetCoordinates"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/btn_get_coordinates"
		android:onClick="onRequestCoordinates" >
	    <requestFocus />
    </Button>
</LinearLayout>
